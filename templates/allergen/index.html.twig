{% extends 'base.html.twig' %}

{% block title %}Allergène{% endblock %}

{% block body %}

<div class="card">
  <h1 class="card-header text-center font-weight-bold text-uppercase py-4">Liste des allergènes</h1>
  <div class="card-body">
    <div id="table" class="table-editable">
      <span class="table-add float-right mb-3 mr-2"><a href="#!" class="text-success"><i
            class="fas fa-plus fa-2x" aria-hidden="true"></i></a></span>
      <table class="table table-bordered table-responsive-md table-striped text-center">
        <thead>
          <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for allergen in allergens %}
            <tr>
                <td>{{ allergen.id }}</td>
                <td>{{ allergen.name }}</td>
                <td><img src="{{ asset(allergen.image.imgpath) }}" width="75px" /></td>
                <td>
                    <a class="btn btn-danger btn-rounded btn-sm my-0" href="{{ path('allergen_show', {'id': allergen.id}) }}">Affichage</a>
                    <a class="btn btn-danger btn-rounded btn-sm my-0" href="{{ path('allergen_edit', {'id': allergen.id}) }}">Edition</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-primary btn-rounded btn-sm my-0" href="{{ path('allergen_new') }}">Créer un allergène</a>
{% endblock %}

