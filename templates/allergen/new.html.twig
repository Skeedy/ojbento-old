{% extends 'base.html.twig' %}

{% block title %}Créaton d'un allergène{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <h1 class="text-center m-5">Créer un allergène</h1>
    <div class="row d-flex flex-column align-items-center">
        <div class="col-6">
            {{ include('allergen/_form.html.twig') }}     
        </div>
        <div class="container d-flex justify-content-center">
            <button class="d-flex justify-content-center align-items-center btn btn-danger btn-rounded mr-2">Sauvegarder</button>
            <a class="d-flex justify-content-center align-items-center btn btn-danger btn-rounded mr-2" href="{{ path('allergen_index') }}">Revenir à la liste</a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
    <script>
        var allergenName = document.getElementById('allergen_name');
        var hiddenInput = document.getElementById('allergen_image_alt');
        $('#allergen_name').on('blur', function(){
            hiddenInput.value = allergenName.value;
            console.log(hiddenInput.value);
        });
    </script>
{% endblock %}
