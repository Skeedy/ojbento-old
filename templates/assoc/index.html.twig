{% extends 'base.html.twig' %}

{% block title %}Assoc index{% endblock %}

{% block body %}
    <h1>Assoc index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Product</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for assoc in assocs %}
            <tr>
                <td>{{ assoc.id }}</td>
                <td>{{ assoc.quantity }}</td>
                <td>{{ assoc.product.type }} {{ assoc.product }}</td>

                <td>
                    <a href="{{ path('assoc_show', {'id': assoc.id}) }}">show</a>
                    <a href="{{ path('assoc_edit', {'id': assoc.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('assoc_new') }}">Create new</a>
{% endblock %}
