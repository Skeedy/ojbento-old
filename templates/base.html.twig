    <link rel="stylesheet" href="{{ (asset('asset/css/style.css')) }}">
    {% block stylesheets %}

    {% endblock %}
</head>
<body>
<nav id="header" class="navbar">
    <div class="container-fluid">
        <a class="logo" href=""><span>OjBento</span></a>
        <div class="btn-group pull-right user">
            {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                {{ app.user.username }}
                <a href="{{ path("fos_user_security_logout") }}"> <button class="btn btn-primary">Déconnexion</button></a>
            {% else %}
                <a href="{{ path("fos_user_security_login") }}"> <button class="btn btn-primary">Connexion</button></a>
            {% endif %}
        </div>
    </div>
</nav>
