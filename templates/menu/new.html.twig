{% extends 'base.html.twig' %}

{% block title %}New Menu{% endblock %}

{% block body %}
    <h1>Create new Menu</h1>
    {{ form_start(form) }}
    <div class="'container">
        <div class="row">
            <div class="col">
                {{ form_row(form.name) }}
                {{ form_row(form.isMidi) }}
            </div>
            <div class="col">
                {{ form_row(form.assocs) }}
                <div class="row flex-row">
                {{ form_row(form.prices) }}
                </div>
            </div>
        </div>
    </div>
        <a href="{{ path('menu_index') }}">back to list</a>

    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script src ="{{ (asset('asset/js/menu.js')) }}" type="text/javascript"></script>
    <script>
        $(document).ready(function(){
            $('#assoc_forMenu').val('0');
            addMenuFrom($('#menu_assocs'), $newAssoc);
            addPriceFrom($('#menu_prices'), $newPrice);

        })
    </script>
{% endblock %}
