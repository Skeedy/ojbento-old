{% extends 'base.html.twig' %}

{% block title %}Nouveau Menu{% endblock %}

{% block body %}
    <h1 class="text-center m-5">Créer un nouveau menu</h1>

    <div class="d-flex justify-content-center align-items-center">
        {{ include('menu/_form.html.twig') }}
    </div>

    <div class="d-flex">
        {{ form_start(form) }}
            <div>
                {{ form_widget(form) }}
            </div>
            <button class="mt-3 btn btn-danger btn-rounded btn-sm my-0">{{ button_label|default('Sauvergarder') }}</button>
            <a class="mt-3 btn btn-danger btn-rounded btn-sm my-0" href="{{ path('menu_index') }}">Revenir à la liste</a>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src ="{{ (asset('asset/js/menu.js')) }}" type="text/javascript"></script>
    <script>
        $(document).ready(function(){
            $('#assoc_forMenu').val('0');
        })
    </script>
{% endblock %}
